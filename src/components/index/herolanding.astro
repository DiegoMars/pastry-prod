---
import { Image } from 'astro:assets';
import background from '../../assets/background.jpeg'; 
import cat from '../../assets/cat1.png'; 
---
<section class="relative overflow-hidden py-16">
  <Image
    src={background}
    class="absolute inset-0 h-full w-full object-cover -z-10"
    alt=""
  />

  <div class="relative max-w-4xl mx-auto px-6 py-16 text-center">
    <div class="hidden lg:block absolute -left-20 bottom-6 w-32 z-20 tiltCat">
      <div class="catSticker">
        <Image src={cat} alt="" class="w-full" />
      </div>
    </div>

    <div class="hidden lg:block absolute -right-20 bottom-6 w-32 z-20 tiltCat">
      <div class="catSticker">
        <Image src={cat} alt="" class="w-full -scale-x-100" />
      </div>
    </div>

    <div class="relative z-10 bg-background/90 rounded-3xl px-6 py-10 text-center shadow-xl heroPop">
      <h1 class="relative z-30 font-[Bubblegum_Sans] text-4xl md:text-5xl text-text-700 mb-4 heroGlow">
        Baked Goods & Desserts for an occasion!
      </h1>
      <p class="relative z-30 text-text-600 text-lg md:text-xl mt-4">
        Sweet treats baked with love
      </p>
    </div>
  </div>
</section>

<style>
  .heroGlow {
    text-shadow:
      0 0 8px rgba(239, 191, 207, 0.9),
      0 0 14px rgba(239, 191, 207, 0.6);
  }

  .catSticker {
    background: var(--color-background);
    padding: 0.5rem;
    box-shadow:
      0 10px 22px rgba(0, 0, 0, 0.35),
      inset 0 0 2px rgba(0, 0, 0, 0.15); /* faint paper edge */

    /* Your custom cutout path */
    clip-path: polygon(24% 1%,
      52% 3%,
      86% 3%,
      98% 20%,
      96% 52%,
      97% 86%,
      82% 99%,
      35% 99%,
      10% 97%,
      4% 80%,
      2% 56%,
      1% 34%,
      5% 14%
    );
  }

  @keyframes tiltSnap {
    0%   { transform: rotate(-6deg); }
    50%  { transform: rotate(6deg); }
    100% { transform: rotate(-6deg); }
  }

  .tiltCat {
    animation: tiltSnap 2s steps(1, end) infinite;
    transform-origin: bottom center;
  }
</style>
